{
    "name": "Download with Aria2",
    "description": "An extension for Chromium and Firefox Quantum that allows you to download with Aria2",
    "version": "2.480",
    "manifest_version": 2,
    "minimum_chrome_version": "35",
    "permissions": [ "contextMenus", "tabs", "downloads", "notifications", "cookies", "<all_urls>" ],
    "background": {
        "scripts": [ "background.js", "js/jsonrpc.js" ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "19": "icons/icon24.png"
        },
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "icons/icon128.png",
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}
